{
    "version": "2.90",
    "description": "Sigcheck. File version and signature viewer",
    "homepage": "https://docs.microsoft.com/en-us/sysinternals/downloads/sigcheck",
    "license": {
        "identifier": "Freeware",
        "url": "https://docs.microsoft.com/en-us/sysinternals/license-terms"
    },
    "url": "https://download.sysinternals.com/files/Sigcheck.zip",
    "hash": "96efa256749fde2ef157baee9677e417047a0d77325ad97ca800fa10c4bf0dbf",
    "pre_install": [
        "$sysint = 'HKCU:\\SOFTWARE\\Sysinternals'",
        "$fin = \"$sysint\\sigcheck\"",
        "New-Item $sysint, $fin -ErrorAction 'SilentlyContinue' | Out-Null",
        "Set-ItemProperty -Path $fin -Name 'EulaAccepted' -Value 1 -Type 'DWord' -Force | Out-Null"
    ],
    "uninstaller": {
        "script": [
            "if ($purge) {",
            "    $sysInt = 'HKCU:\\SOFTWARE\\Sysinternals'",
            "    Remove-Item \"$sysInt\\sigcheck\" -Recurse -Force -ErrorAction 'SilentlyContinue'",
            "    if ((Get-ChildItem $sysInt).Count -eq 0) { Remove-Item $sysInt -Recurse -Force -ErrorAction 'SilentlyContinue' }",
            "}"
        ]
    },
    "architecture": {
        "64bit": {
            "bin": [
                "sigcheck64.exe",
                [
                    "sigcheck64.exe",
                    "sigcheck"
                ]
            ]
        },
        "32bit": {
            "bin": "sigcheck.exe"
        },
        "arm64": {
            "bin": [
                "sigcheck64a.exe",
                [
                    "sigcheck64a.exe",
                    "sigcheck"
                ]
            ]
        }
    },
    "checkver": "Sigcheck\\s+v([\\d.]+)</h1",
    "autoupdate": {
        "url": "https://download.sysinternals.com/files/Sigcheck.zip"
    }
}
