        "32bit": {
            "url": "https://download-installer.cdn.mozilla.net/pub/firefox/releases/106.0/win32/zh-CN/Firefox%20Setup%20106.0.exe#/firefox.7z",
            "hash": "sha512:2f3bcc91e70aa52716c295f91732cf49f1e6fc3aed22464ae26a68f7089a930c2498484e0cb9234cb035a2e5b941e966c15d14ab8a6004fcae98acad2fa86c4c"
