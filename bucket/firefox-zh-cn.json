        "32bit": {
            "url": "https://download-installer.cdn.mozilla.net/pub/firefox/releases/116.0/win32/zh-CN/Firefox%20Setup%20116.0.exe#/firefox.7z",
            "hash": "sha512:4d19c29b773f8c5d45aa33995b040b4cbc2d0340c41e8dea7330ab269ec005d558e7983e043fc29228042ebd54e6ab024db7e8a41b90417dbc70908104a30c11"
