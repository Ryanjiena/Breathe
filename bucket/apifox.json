{
    "version": "2.1.41",
    "description": "Apifox = Postman + Swagger + Mock + JMeter",
    "homepage": "https://www.apifox.cn/",
    "license": {
        "identifier": "Freeware"
    },
    "architecture": {
        "64bit": {
            "url": "http://cdn.apifox.cn/download/2.1.41/Apifox-2.1.41.exe#/installer.exe",
            "hash": "sha512:8476dce79716ce877535bb2dc845c4bde090fd12bc899eb0822324b51ee162a935e65b349fb9ed8ac1591d0b53bf96692477cc80084b2162c460300797e95d2e",
            "installer": {
                "script": [
                    "ensure \"$persist_dir\" | Out-Null",
                    "New-Item \"$env:AppData\\apifox\" -ItemType Junction -Target \"$persist_dir\" | Out-Null",
                    "Start-Process \"$dir\\installer.exe\" -WorkingDirectory \"$dir\" -ArgumentList \"/S /D=$dir\" -Wait"
                ]
            },
            "post_install": "Remove-Item \"$dir\\installer.exe\" -Recurse -Force -ErrorAction 'SilentlyContinue'",
            "uninstaller": {
                "script": [
                    "Remove-Item \"$env:AppData\\apifox\" -Recurse -Force -ErrorAction 'SilentlyContinue'",
                    "Start-Process \"$dir\\Uninstall Apifox.exe\" -WorkingDirectory \"$dir\" -ArgumentList \"/S\" -Wait"
                ]
            }
        }
    },
    "shortcuts": [
        [
            "Apifox.exe",
            "Apifox"
        ]
    ],
    "checkver": {
        "url": "http://cdn.apifox.cn/download/latest.yml",
        "regex": "(?sm)version:[\\s]+([\\d.]+).*?http://(?<url>.*?\\.exe)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "http://$matchUrl#/installer.exe",
                "hash": {
                    "url": "http://cdn.apifox.cn/download/latest.yml",
                    "mode": "extract",
                    "regex": "sha512.*?$base64"
                }
            }
        }
    }
}
