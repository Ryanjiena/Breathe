{
    "version": "2.1.17",
    "description": "Apifox = Postman + Swagger + Mock + JMeter",
    "homepage": "https://www.apifox.cn/",
    "license": {
        "identifier": "Freeware"
    },
    "architecture": {
        "64bit": {
            "url": "http://cdn.apifox.cn/download/2.1.17/Apifox-2.1.17.exe#/installer.exe",
            "hash": "sha512:c91f680bc7ebf73e43c718fbca1ee86b18938ef3085c4b10c6cd7b026d29b5f965bdd946ab77177a48c3efbce6f181d248856a8810842d68afc8da076f64bf81",
            "installer": {
                "script": [
                    "ensure \"$persist_dir\" | Out-Null",
                    "New-Item \"$env:AppData\\apifox\" -ItemType Junction -Target \"$persist_dir\" | Out-Null",
                    "Start-Process -filepath \"$dir\\installer.exe\" -WorkingDirectory \"$dir\" -ArgumentList \"/S /D=$dir\" -Wait"
                ]
            },
            "post_install": "Remove-Item \"$dir\\installer.exe\" -ErrorAction 'SilentlyContinue' -Force -Recurse",
            "uninstaller": {
                "script": [
                    "Remove-Item \"$env:AppData\\apifox\" -ErrorAction 'SilentlyContinue' -Force -Recurse",
                    "Start-Process -filepath \"$dir\\Uninstall Apifox.exe\" -WorkingDirectory \"$dir\" -ArgumentList \"/S\" -Wait"
                ]
            }
        }
    },
    "shortcuts": [
        [
            "Apifox.exe",
            "Apifox"
        ]
    ],
    "checkver": {
        "url": "http://cdn.apifox.cn/download/latest.yml",
        "regex": "(?sm)version:[\\s]+([\\d.]+).*?http://(?<url>.*?\\.exe)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "http://$matchUrl#/installer.exe",
                "hash": {
                    "url": "http://cdn.apifox.cn/download/latest.yml",
                    "mode": "extract",
                    "regex": "sha512.*?$base64"
                }
            }
        }
    }
}
