        "regex": "releases/download/(?<tag>[\\d.]+)/BBDown_(?<ver>[\\d.]+)_(?<date>\\d+)_win-x64",
        "replace": "${ver}.${date}"
    },
    "autoupdate": {
        "architecture": {
