{
    "version": "1.3-dev_2022-08-22",
    "description": "Professional vector graphics editor",
    "homepage": "https://inkscape.org",
    "license": "GPL-3.0-or-later",
    "architecture": {
        "64bit": {
            "url": "https://gitlab.com/inkscape/inkscape/-/jobs/2916738400/artifacts/raw/build/inkscape-1.3-dev_2022-08-22_46b45633-x64.7z",
            "hash": "4fbc213db7d2484677e9926795840554e53be8c07b6e86ff54c630649824556a"
        },
        "32bit": {
            "url": "https://gitlab.com/inkscape/inkscape/-/jobs/2911159629/artifacts/raw/build/inkscape-1.3-dev_2022-08-18_412d5413-x86.7z",
            "hash": "19342127e1604fefb51dd90bbcfec6a1bfa4b60d09efea7480fb3f2f1accd49f"
        }
    },
    "extract_dir": "inkscape",
    "bin": [
        "bin\\inkscape.com",
        "bin\\inkview.com"
    ],
    "shortcuts": [
        [
            "bin\\inkscape.exe",
            "Inkscape Dev"
        ]
    ],
    "checkver": {
        "script": [
            "$urls =  @()",
            "'x32', 'x64' | ForEach-Object {",
            "    $base_url = 'https://alpha.inkscape.org/snapshots/latest_master_'+ $_ + '.html'",
            "    $dl_page = Invoke-WebRequest $base_url -UseBasicParsing",
            "    $dl = $dl_page.links | Where-Object href -match '\\.7z$' | Select-Object -first 1 -expand href",
            "    $urls += $dl",
            "}",
            "Write-Output ('urls:\"' + $urls + '\"')"
        ],
        "regex": "urls:\"(?<win32bit>.+inkscape-[\\d._\\-dev]+_\\w+-.+)\\s(?<win64bit>.+inkscape-(?<version>[\\d._\\-dev]+)_\\w+-.+)\""
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "$matchWin64bit"
            },
            "32bit": {
                "url": "$matchWin32bit"
            }
        }
    }
}
