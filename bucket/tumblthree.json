    "suggest": {
        "vcredist": "extras/vcredist2022"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/TumblThreeApp/TumblThree/releases/download/v2.6.2/TumblThree-v2.6.2-x64-Application.zip",
            "hash": "5ac4fdf4ce6401c5d3ffd52ad3b4a14672af85fa23cbd4626dee2c6b88a2c4d0"
        },
        "32bit": {
            "url": "https://github.com/TumblThreeApp/TumblThree/releases/download/v2.6.2/TumblThree-v2.6.2-x86-Application.zip",
            "hash": "4c041b0dfcecd6b601c2698dc5b609a93f4a92d9640998d75f32143a5bb0911f"
        }
    },
    "pre_install": [
        "foreach ($name in @('Cookies.json', 'Manager.json', 'Queuelist.json')) {",
        "    if (!(Test-Path \"$persist_dir\\$name\")) { New-Item \"$dir\\$name\" | Out-Null }",
        "}",
        "if (!(Test-Path \"$persist_dir\\Settings.json\")) { Set-Content \"$dir\\Settings.json\" '{\"PortableMode\": true}' -Encoding ASCII }"
    ],
    "bin": "TumblThree.exe",
    "shortcuts": [
        [
            "TumblThree.exe",
            "TumblThree"
        ]
    ],
    "persist": [
        "Cookies.json",
        "Manager.json",
        "Queuelist.json",
        "Settings.json"
    ],
    "checkver": {
        "github": "https://github.com/TumblThreeApp/TumblThree",
        "regex": "/TumblThree-v([\\d.]+)-x\\d+"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/TumblThreeApp/TumblThree/releases/download/v$matchHead/TumblThree-v$version-x64-Application.zip"
            },
            "32bit": {
                "url": "https://github.com/TumblThreeApp/TumblThree/releases/download/v$matchHead/TumblThree-v$version-x86-Application.zip"
            }
        }
    }
}
