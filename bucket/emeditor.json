{
    "version": "22.3.901",
    "description": "A fast, lightweight and extensible text editor for Windows. Useful for opening very large files.",
    "homepage": "https://www.emeditor.com/",
    "license": "Shareware",
    "architecture": {
        "64bit": {
            "url": "https://emeditor.blob.core.windows.net/emed64_22.3.901_portable.zip",
            "hash": "3020db1a00efba8e7356ce02c0f165267fb6fa9737e6d7f8ef1c90fb559ecb3e"
        },
        "32bit": {
            "url": "https://emeditor.blob.core.windows.net/emed32_22.3.901_portable.zip",
            "hash": "79d18b59434c826ef8eb8eb1bcb69dc1ec9db7141658eca8559995686fa5aed3"
        }
    },
    "pre_install": [
        "$manifest.persist | ForEach-Object {",
        "    if ([io.path]::GetExtension($_)) {",
        "        if (!(Test-Path \"$persist_dir\\$_\")) { New-Item \"$dir\\$_\" | Out-Null }",
        "    }",
        "}"
    ],
    "bin": "EmEditor.exe",
    "shortcuts": [
        [
            "EmEditor.exe",
            "EmEditor"
        ]
    ],
    "persist": [
        "eeCommon.ini",
        "eeConfig.ini",
        "eeLM.ini",
        "eePlugins.ini"
    ],
    "checkver": {
        "url": "https://support.emeditor.com/en/downloads",
        "regex": "v([\\d.]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://emeditor.blob.core.windows.net/emed64_$version_portable.zip"
            },
            "32bit": {
                "url": "https://emeditor.blob.core.windows.net/emed32_$version_portable.zip"
            }
        }
    }
}
