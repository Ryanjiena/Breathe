{
    "version": "22.3.908",
    "description": "A fast, lightweight and extensible text editor for Windows. Useful for opening very large files.",
    "homepage": "https://www.emeditor.com/",
    "license": "Shareware",
    "architecture": {
        "64bit": {
            "url": "https://emeditor.blob.core.windows.net/emed64_22.3.908_portable.zip",
            "hash": "cf48a659f357f10a147a781d57817bf32ba1ff1bb314f10b166dd66daa5a7824"
        },
        "32bit": {
            "url": "https://emeditor.blob.core.windows.net/emed32_22.3.908_portable.zip",
            "hash": "c5b3ac3de66c90500a26e206ec99b3770014cf47b7c98743f9d65871d450899f"
        }
    },
    "pre_install": [
        "$manifest.persist | ForEach-Object {",
        "    if ([io.path]::GetExtension($_)) {",
        "        if (!(Test-Path \"$persist_dir\\$_\")) { New-Item \"$dir\\$_\" | Out-Null }",
        "    }",
        "}"
    ],
    "bin": "EmEditor.exe",
    "shortcuts": [
        [
            "EmEditor.exe",
            "EmEditor"
        ]
    ],
    "persist": [
        "eeCommon.ini",
        "eeConfig.ini",
        "eeLM.ini",
        "eePlugins.ini"
    ],
    "checkver": {
        "url": "https://support.emeditor.com/en/downloads",
        "regex": "v([\\d.]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://emeditor.blob.core.windows.net/emed64_$version_portable.zip"
            },
            "32bit": {
                "url": "https://emeditor.blob.core.windows.net/emed32_$version_portable.zip"
            }
        }
    }
}
