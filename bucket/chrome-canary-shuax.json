{
    "version": "107.0.5287.2",
    "description": "chrome-canary + chrome-plus.",
    "homepage": "https://www.google.com/chrome/",
    "license": {
        "identifier": "Freeware",
        "url": "https://www.google.com/chrome/privacy/eula_text.html"
    },
    "depends": "chrome-plus",
    "architecture": {
        "64bit": {
            "url": "https://dl.google.com/release2/chrome/ace5g3lekb6m7xur2x74iwddqfla_107.0.5287.2/107.0.5287.2_chrome_installer.exe#/dl.7z",
            "hash": "fea2dee421375a622c4c77e8a76b14e3dc27e7fe391ef7e4aac6cb2f1bd625a2"
        },
        "32bit": {
            "url": "https://dl.google.com/release2/chrome/ad5ouaw7up2j3qx7dw7fh4otqm_107.0.5287.2/107.0.5287.2_chrome_installer.exe#/dl.7z",
            "hash": "65b0182609e88ff35abac763963b944b0e51d6a2c6a427bc30688d51c1622a1b"
        }
    },
    "installer": {
        "script": [
            "Expand-7zipArchive \"$dir\\chrome.7z\" -ExtractDir 'Chrome-bin' -Removal",
            "New-Item -Path \"$dir\" -Name \"App\" -ItemType \"directory\" | Out-Null",
            "Get-ChildItem \"$dir\" -Exclude *install.json, *manifest.json | ForEach-Object { Move-Item $_.FullName \"$dir\\App\\\" -Recurse -Force -ErrorAction SilentlyContinue }",
            "Get-ChildItem \"$(appdir chrome-plus $global)\\current\\\" -Exclude *install.json, *manifest.json | ForEach-Object { Copy-Item $_.FullName \"$dir\\App\\\" -Recurse -Force -ErrorAction SilentlyContinue }",
            "@('Chrome.exe', '说明.txt', '清理.bat') | ForEach-Object { Copy-Item \"$bucketsdir\\tian\\scripts\\chrome\\$_\" \"$dir\\$_\" -ErrorAction 'SilentlyContinue' -Force | Out-Null }"
        ]
    },
    "pre_uninstall": "Start-Process \"$dir\\清理.bat\" -WorkingDirectory \"$dir\" -Wait",
    "bin": [
        [
            "Chrome.exe",
            "chrome-canary-plus"
        ]
    ],
    "shortcuts": [
        [
            "Chrome.exe",
            "Google Chrome Canary Plus"
        ]
    ],
    "persist": [
        "Data",
        "Cache"
    ],
    "checkver": {
        "url": "https://github.com/Ryanjiena/MetaVersion/raw/main/chrome.json",
        "regex": "(?sm)canary.*?win-x86.*?(?<86>chrome/[\\w-]+_(?<version>[\\d.]+).*?_chrome_installer.exe).*?win-x64.*?(?<64>chrome/[\\w-]+_(?<version>[\\d.]+).*?_chrome_installer.exe)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://dl.google.com/release2/$match64#/dl.7z",
                "hash": {
                    "url": "https://github.com/Ryanjiena/MetaVersion/raw/main/chrome.json",
                    "jsonpath": "$[?(@.Product == 'canary')].Release[?(@.Architecture == 'win-x64')].Hash"
                }
            },
            "32bit": {
                "url": "https://dl.google.com/release2/$match86#/dl.7z",
                "hash": {
                    "url": "https://github.com/Ryanjiena/MetaVersion/raw/main/chrome.json",
                    "jsonpath": "$[?(@.Product == 'canary')].Release[?(@.Architecture == 'win-x86')].Hash"
                }
            }
        }
    }
}
