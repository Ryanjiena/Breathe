        "}"
    ],
    "uninstaller": {
        "script": [
            "@('gui-config.json', 'pac.txt', 'transfer_log.json', 'user-rule.txt') | ForEach-Object {",
            "    if (Test-Path \"$dir\\$_\") {",
            "        ensure \"$persist_dir\" | Out-Null",
            "        Copy-Item \"$dir\\$_\" \"$persist_dir\\\" | Out-Null",
            "    }",
            "}"
        ]
    },
    "bin": "ShadowsocksR.exe",
    "shortcuts": [
        [
            "ShadowsocksR.exe",
            "ShadowsocksR"
        ]
    ],
    "persist": "temp",
