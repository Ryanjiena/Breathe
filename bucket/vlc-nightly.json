        },
        "arm64": {
            "url": "https://artifacts.videolan.org/vlc/nightly-win64-arm-llvm/20240921-0426/vlc-4.0.0-dev-win64-d0fc525c.7z",
            "hash": "sha512:83db5a5c592773fd57d3d4ecbe24f83872e03956495cd5344d2cb26565b9453a2a1567bd2bfea5be3278b97b82fd579e17abd686117e34fb3a37debe54a11719"
        }
