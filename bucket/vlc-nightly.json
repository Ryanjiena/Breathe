        },
        "arm64": {
            "url": "https://artifacts.videolan.org/vlc/nightly-win64-arm-llvm/20240210-0430/vlc-4.0.0-dev-win64-eb933a62.7z",
            "hash": "sha512:d2e3337616c1e142f6e03e76655cb5a4e19f08ec76735d85ddeee4dcddd55ebb19b1512db75fde86a29e0e1fd6a484cd20718a2bf838a062aee57a5ab6354f05"
