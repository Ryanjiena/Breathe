        "arm64": {
            "url": "https://artifacts.videolan.org/vlc/nightly-win64-arm-llvm/20240501-0431/vlc-4.0.0-dev-win64-b96588cc.7z",
            "hash": "sha512:233e3126433872e8acbf5914eacbbeb8488eda75e7cb8858eb681aae7bedc4570a34905d5077bd889a0b6f0cf220cd9e27e1d3471ae84034d63c30d307942e25"
