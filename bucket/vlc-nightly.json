        },
        "arm64": {
            "url": "https://artifacts.videolan.org/vlc/nightly-win64-arm-llvm/20240510-0430/vlc-4.0.0-dev-win64-7b98948b.7z",
            "hash": "sha512:33bdfef1944a94314ed4edf68870c4f3d50d4de8f9a3112a0b6f74f6486ab5f020daf304975019d0cd86e5ed3dc99e125feaf5ada0aed158ec7b298c4355f0bf"
