    "depends": "typora",
    "url": "https://pan.jiemi.workers.dev/?file=/patch/typora/winmm_v1.0.7z",
    "hash": "bd7149f15d834191ff7acf27e0597741a0e37f3ccd440c9acf2efec6ea72ca79",
    "installer": {
        "script": [
            "Get-ChildItem $dir -Exclude *install.json, *manifest.json | ForEach-Object {",
            "  Get-ChildItem \"$(scoop prefix typora)\\$($_.Name)\" | Rename-Item -NewName { $_.Name + \".metabak\" }",
            "  Copy-Item $_.FullName -destination \"$(scoop prefix typora)\" -Force -ErrorAction SilentlyContinue",
            "}"
        ]
    },
    "uninstaller": {
        "script": [
            "Get-ChildItem \"$dir\" -Exclude *install.json, *manifest.json | ForEach-Object {",
            "  Remove-Item \"$(scoop prefix typora)\\$($_.Name)\" -Force -ErrorAction SilentlyContinue",
            "  Get-ChildItem \"$(scoop prefix typora)\\$($_.Name).metabak\" | Rename-Item -NewName { $_.Name -replace '.metabak','' }",
            "}",
            "Write-Host \"The '$app' has been uninstalled.\" -Foreground Magenta"
        ]
    }
}
