    },
    "url": "https://yunpan.aliyun.com/downloads/apps/desktop/aDrive-3.6.0.exe#/installer.exe",
    "hash": "sha512:25d34b4bf5d03bf814d2a661ff2c3e988ae8a26537b0b7eb93a22da3770f5254e4ac0a7b8ba879eef99f8f02505270ddf2a595ff29e978b7706655892b073183",
    "installer": {
        "script": [
            "ensure \"$persist_dir\" | Out-Null",
            "New-Item \"$env:AppData\\aDrive\" -ItemType Junction -Target \"$persist_dir\" | Out-Null",
            "Start-Process -filepath \"$dir\\installer.exe\" -WorkingDirectory \"$dir\" -ArgumentList \"/S /D=$dir\" -Wait"
        ]
    },
    "post_install": "Remove-Item \"$dir\\installer.exe\" -ErrorAction 'SilentlyContinue' -Force -Recurse",
    "uninstaller": {
        "script": [
            "Remove-Item \"$env:AppData\\aDrive\" -ErrorAction 'SilentlyContinue' -Force -Recurse",
            "Start-Process -filepath \"$dir\\Uninstall.exe\" -WorkingDirectory \"$dir\" -ArgumentList \"/S\" -Wait"
        ]
    },
    "persist": "User Data",
    "checkver": {
        "url": "https://raw.githubusercontent.com/Ryanjiena/MetaVersion/main/alibaba.json",
        "jsonpath": "$[?(@.name == 'aDrive')].version"
    },
    "autoupdate": {
        "url": "https://yunpan.aliyun.com/downloads/apps/desktop/aDrive-$version.exe#/installer.exe",
        "hash": {
            "url": "https://raw.githubusercontent.com/Ryanjiena/MetaVersion/main/alibaba.json",
            "mode": "json",
            "jsonpath": "$[?(@.name == 'aDrive')].hash"
