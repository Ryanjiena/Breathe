{
    "version": "5.27",
    "description": "A V2Ray client for Windows, support Xray core, v2fly core and hysteria core.",
    "homepage": "https://github.com/2dust/v2rayN",
    "license": {
        "identifier": "GPL-3.0-only",
        "url": "https://github.com/2dust/v2rayN/blob/master/LICENSE"
    },
    "depends": "hysteria",
    "url": [
        "https://github.com/2dust/v2rayN/releases/download/5.27/v2rayN-Core.zip",
        "https://raw.githubusercontent.com/emptysuns/daily/gh-pages/gfwlist/gfwlist.txt",
        "https://raw.githubusercontent.com/emptysuns/daily/gh-pages/adlist/adlist.txt",
        "https://raw.githubusercontent.com/Loyalsoldier/geoip/release/Country.mmdb"
    ],
    "hash": [
        "3b48902932c0479ae1a948caf878be26bb854ed279d42198369cf742a0a45ec5",
        "735b7ed1fb3f3b8b17016cab1cea6367bfb8645106b14e1a08ddaa952962771f",
        "b7ff388917bad3ba7f85bfa71a2134cddcfa00b524698dbf260441b51a9e6aa0",
        "ec78281f98dcb3bc99de11f7562488c9ade56e4e05e8491e1f237a45c72c1336"
    ],
    "extract_dir": "v2rayN-Core",
    "pre_install": [
        "Copy-Item \"$(scoop prefix hysteria)\\hysteria.exe\" \"$dir\" -ErrorAction 'SilentlyContinue' -Force | Out-Null",
        "if (!(Test-Path \"$persist_dir\\user-wininet.json\")) {",
        "    New-Item -Path \"$dir\\user-wininet.json\" | Out-Null",
        "}",
        "if (Test-Path \"$persist_dir\\guiNConfig.json\") {",
        "    Copy-Item \"$persist_dir\\guiNConfig.json\" \"$dir\\\" | Out-Null",
        "}",
        "Get-Content \"$dir\\adlist.txt\" | foreach { 'block domain-suffix ' + $_ } | Set-Content -Encoding UTF8 'hysteria_acl0.txt'",
        "Get-Content \"$dir\\gfwlist.txt\" | foreach { 'proxy domain-suffix ' + $_ } | Set-Content -Encoding UTF8 'hysteria_acl1.txt'",
        "Get-Content \"$dir\\hysteria_acl*.txt\" | Set-Content -Encoding UTF8 'routes.acl'",
        "New-Item -Path \"$dir\" -Name \"acl\" -ItemType \"directory\" | Out-Null",
        "Move-Item \"$dir\\routes.acl\", \"$dir\\Country.mmdb\" \"$dir\\acl\\\" -ErrorAction 'SilentlyContinue' -Force",
        "Remove-Item \"$dir\\adlist.txt\", \"$dir\\gfwlist.txt\", \"$dir\\hysteria_acl*.txt\" -ErrorAction 'SilentlyContinue' -Force"
    ],
    "uninstaller": {
        "script": [
            "if (Test-Path \"$dir\\guiNConfig.json\") {",
            "    ensure \"$persist_dir\" | Out-Null",
            "    Copy-Item \"$dir\\guiNConfig.json\" \"$persist_dir\\\" | Out-Null",
            "}"
        ]
    },
    "bin": "v2rayN.exe",
    "shortcuts": [
        [
            "v2rayN.exe",
            "v2rayN"
        ]
    ],
    "persist": [
        "config.json",
        "user-wininet.json"
    ],
    "checkver": {
        "url": "https://api.github.com/repos/2dust/v2rayN/releases?per_page=1",
        "jsonpath": "$[0].tag_name"
    },
    "autoupdate": {
        "url": [
            "https://github.com/2dust/v2rayN/releases/download/$version/v2rayN-Core.zip",
            "https://raw.githubusercontent.com/emptysuns/daily/gh-pages/gfwlist/gfwlist.txt",
            "https://raw.githubusercontent.com/emptysuns/daily/gh-pages/adlist/adlist.txt",
            "https://raw.githubusercontent.com/Loyalsoldier/geoip/release/Country.mmdb"
        ]
    }
}
