    "pre_install": [
        "$sysint = 'HKCU:\\SOFTWARE\\Sysinternals'",
        "$fin = \"$sysint\\NotMyFault\"",
        "New-Item $sysint, $fin -ErrorAction 'SilentlyContinue' | Out-Null",
        "Set-ItemProperty -Path $fin -Name 'EulaAccepted' -Value 1 -Type 'DWord' -Force | Out-Null"
    ],
    "uninstaller": {
        "script": [
            "if ($purge) {",
            "    $sysInt = 'HKCU:\\SOFTWARE\\Sysinternals'",
            "    Remove-Item \"$sysInt\\NotMyFault\" -Recurse -Force -ErrorAction 'SilentlyContinue'",
            "    if ((Get-ChildItem $sysInt).Count -eq 0) { Remove-Item $sysInt -Recurse -Force -ErrorAction 'SilentlyContinue' }",
            "}"
        ]
    },
    "architecture": {
        "64bit": {
            "bin": [
                "notmyfaultc64.exe",
                [
                    "notmyfaultc64.exe",
                    "notmyfault64"
                ],
                [
                    "notmyfaultc64.exe",
                    "notmyfault"
                ]
            ],
            "shortcuts": [
                [
                    "notmyfault64.exe",
                    "SysInternals\\NotMyFault"
                ]
            ]
        },
        "32bit": {
            "bin": [
                "notmyfaultc.exe",
                [
                    "notmyfaultc.exe",
                    "notmyfault"
                ]
            ],
            "shortcuts": [
                [
                    "notmyfault.exe",
                    "SysInternals\\NotMyFault"
                ]
            ]
        }
