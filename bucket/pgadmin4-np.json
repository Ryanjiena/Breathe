{
    "version": "8.7",
    "homepage": "https://www.pgadmin.org/",
    "description": "PostgreSQL administration and development platform.",
    "license": "PostgreSQL",
    "architecture": {
        "64bit": {
            "url": "https://ftp.postgresql.org/pub/pgadmin/pgadmin4/v8.7/windows/pgadmin4-8.7-x64.exe",
            "hash": "524ff33ae852c15b9e471f4bb84f935af29adacfc113d8334ab1104c95b0cee0"
        }
    },
    "installer": {
        "args": [
            "/verysilent",
            "/nocancel",
            "/norestart",
            "/dir=$dir"
        ]
    },
    "post_install": "Remove-Item -Recurse \"$([Environment]::GetFolderPath('commonstartmenu'))\\Programs\\pgAdmin 4\"",
    "uninstaller": {
        "file": "unins000.exe",
        "args": [
            "/verysilent",
            "/nocancel",
            "/norestart"
        ]
    },
    "bin": [
        "runtime\\psql.exe",
        "runtime\\pgAdmin4.exe",
        "runtime\\pg_restore.exe",
        "runtime\\pg_dumpall.exe",
        "runtime\\pg_dump.exe"
    ],
    "shortcuts": [
        [
            "runtime\\pgAdmin4.exe",
            "pgAdmin 4"
        ]
    ],
    "checkver": {
        "url": "https://www.pgadmin.org/download/pgadmin-4-windows/",
        "regex": "pgAdmin 4 v([\\d.]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://ftp.postgresql.org/pub/pgadmin/pgadmin4/v$version/windows/pgadmin4-$version-x64.exe"
            }
        }
    }
}
