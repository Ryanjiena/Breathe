    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/ciderapp/cider-releases/releases/download/v1.5.7-beta.2/Cider-Setup-1.5.7-beta.2.exe#/dl.7z",
            "hash": "sha512:9070ede4f84de5e2717f2a1d9940693f8a027a67d7f31df78f7828dda32ac59072b6ecc67a7df5495046f18c26cb354e6d917c56a9748b3f40263414c2a061d4",
