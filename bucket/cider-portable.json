    "license": {
        "identifier": "AGPL-3.0-or-later",
        "url": "https://github.com/ciderapp/Cider/blob/main/LICENSE"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/ciderapp/cider-releases/releases/download/v1.5.4-beta.98/Cider-Setup-1.5.4-beta.98.exe#/dl.7z",
            "hash": "sha512:de16cf63cb5b6ae325930d26358f6fce8f72d7dd5bcbbcdbf14b67c5ac8548dd49ec4cd8a88920d50182a714d87f97903d14654fc70c015e6b5e9fd02f698590",
            "pre_install": "Expand-7zipArchive \"$dir\\`$PLUGINSDIR\\app-64.7z\" \"$dir\" -Removal"
        }
    },
    "post_install": "Remove-Item \"$dir\\`$PLUGINSDIR\", \"$dir\\`$R0\" -Recurse -Force",
