    "license": {
        "identifier": "AGPL-3.0-or-later",
        "url": "https://github.com/ciderapp/Cider/raw/main/LICENSE"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/ciderapp/cider-releases/releases/download/v1.5.7-beta.99/Cider-Setup-1.5.7-beta.99.exe#/dl.7z",
            "hash": "sha512:9861350d75104fdaafcbda1b9668d387ac237bb1c8620387843527247ac38cb8da43bc4d2eb4897ed04841a19aec2387295ee0645591f1c44289346abefa020f",
            "pre_install": "Expand-7zipArchive \"$dir\\`$PLUGINSDIR\\app-64.7z\" \"$dir\" -Removal"
        }
    },
    "post_install": "Remove-Item \"$dir\\`$PLUGINSDIR\", \"$dir\\`$R0\" -Recurse -Force",
