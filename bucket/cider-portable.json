    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/ciderapp/cider-releases/releases/download/v1.5.7-beta.50/Cider-Setup-1.5.7-beta.50.exe#/dl.7z",
            "hash": "sha512:48180419ed8bbb9a65342e59045aca38f254a9dd858eba5eeedf19f329dac84806b5c03702001f35fd31b811a1252302c04e65b21b82879ade0b941aa5e45f16",
