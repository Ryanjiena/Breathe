    "homepage": "https://cider.sh",
    "license": {
        "identifier": "AGPL-3.0-or-later",
        "url": "https://github.com/ciderapp/Cider/blob/main/LICENSE"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/ciderapp/cider-releases/releases/download/v1.5.4-beta.9/Cider-Setup-1.5.4-beta.9.exe#/dl.7z",
            "hash": "sha512:3ae3aa47a0817263f1f581f108d7f8e21ac18031b1aa2b7e2d0eb38eaf77ecde7bc2211b80b2c31afbc2b5d89afb03785cf33cc2093139aa3d4690c6bed707f1",
            "pre_install": "Expand-7zipArchive \"$dir\\`$PLUGINSDIR\\app-64.7z\" \"$dir\" -Removal"
        }
    },
    "post_install": "Remove-Item \"$dir\\`$PLUGINSDIR\", \"$dir\\`$R0\" -Recurse -Force",
    "shortcuts": [
        [
            "Cider.exe",
            "Cider",
            "--user-data-dir=\"$dir\\User Data\""
        ]
